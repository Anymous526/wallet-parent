$page.setTitle("Register")

<form action="$userLink.setTarget("form/register")" method="post">
    $csrfToken.hiddenField
    <input type="hidden" name="action" value="register_action"/>

    #set ($group = $form.register.defaultInstance)

    <p>Hello, what's your name?</p>

    #if (!$group.name.valid)
        <p>$group.name.message</p>        
    #end    
    #if (!$group.age.valid)
        <p>$group.age.message</p>        
    #end
   

    <p>
    	<table>
    		<tr>
    			<td><label>姓名:</label></td>
        		<td><input type="text" name="$group.name.key" value="$!group.name.value"/></td>
        	</tr>
        	<tr>	
        		<td><label>年龄:</label></td>
        		<td><input type="text" name="$group.age.key" value="$!group.age.value"/></td>
        	</tr>
        	<tr>
        		<td colspan=2><input type="submit" name="event_submit_do_register"/></td>
        	</tr>
        </table>
    </p>

</form>
